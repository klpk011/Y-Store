<div class="product-box">
  <div class="container">
    <!--=== 商品類型 & 品牌選單 ===-->
    <div class='row content-box'>
        <div class='col-md-12'>
        <!--=== 頁面標題 ===-->
        <h3><i class='fa fa-gift'></i>收藏清单</h3>
        <hr />
        <!--=== 使用者願望清單===-->
        <div class="row">
          <!-- 如果願望清單有商品，顯示商品內容 -->
          <% if @products.length > 0 %>

            <!-- 願望清單列表內容 -->
            <% @products.each do |product| %>
              <div class="col-md-12 cart-item-box">
              <!-- 商品圖片 -->
                <%= link_to product_path(product) do %>
                      <% if product.image.present? %>
                    <!-- 顯示第一張圖片 -->
                    <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
                       <% else %>
                           <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                       <% end %>
                <% end %>
                <div class="name"><%= link_to(product.name, product_path(product)) %></div>
                <div class="price">￥ <%= product.price %></div>
              <!-- 移動至購物車 -->
                <div>
                  <%= link_to add_to_cart_product_path(product), method: :post do %>
                    放入购物车
                  <% end %>
                </div>
              <!-- 從願望清單上刪除該商品 -->
                <div>
                  <%= link_to quit_to_favorite_product_path(product), method: :post do %>
                    <i class='fa fa-close'></i>
                  <% end %>
                </div>
                <hr />
              </div>
            <% end %>


            <% end %>
                   </div>
                 </div>
               </div>
             </div>
           </div>
