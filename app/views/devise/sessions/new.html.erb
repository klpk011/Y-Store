<div class="login-page col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
    <div style="margin-top:50px;margin-bottom:30px;line-height:275%;">
        <h1 class="text-center", style="color:#584b4f;">用户登录</h1>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "登入", class: "btn btn-primary",:style => "border: none;color:white;width:100%;background-color:#584b4f;border-radius:50px;" %>
        </div>
    <% end %>
    <%= render "devise/shared/links" %>
</div>
