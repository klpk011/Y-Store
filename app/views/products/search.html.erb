<div class="container">
    <br>
    <% if @products.blank? %>
        <br>
        <h2 class="search-info-name">亲，没有搜索到课程哦，要不换个关键词试试？</h2>
    <% else %>
        <h2 class="search-info-name">有关“<%= @query_string %>”的课程信息</h2>
        <div class="order-wrap">
            <!-- 课程排序 -->
            <ul class="order-list">
                <p class="list1" >课程排序：</p>
                <ol  class="order-listItem"><a href="/products?order=by_product_quantit">销量<i class="fa fa-arrow-down" ></i></a></ol>
                <ol  class="order-listItem"><a href="/products?order=by_product_price">价格<i class="fa fa-arrow-down" ></i></a></ol>
                <ol  class="order-listItem"><a href="/products">上架时间</a></ol>
            </ul>
        </div>
        <div class="search_result">
            <div class="row product-show0"></div>
            <div class="product-table">
                <% @products.each do |product| %>
                    <div class="col-xs-6 col-md-3">
                        <%= link_to product_path(product) do %>
                            <% if product.image.present? %>
                                <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
                            <% else %>
                                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                            <% end %>
                        <% end %>
                        <p><%= link_to product_path(product) do %>
                                <%= product.name %>
                            <% end %>
                            ￥<%= product.price %></p>
                        <p>描述：<%= product.description %></p>
                        <h4>分类：<%= product.category_id %></h4>
                        <!-- <h3><%= link_to(render_highlight_content(product, @query_string),product_path(product)) %></h3> -->
                    </div>
                <% end %>
            </div>
        </div>
        <div class="text-center">
            <%= will_paginate(@products, renderer: BootstrapPagination::Rails) %>
        </div>
    <% end %>
</div>
