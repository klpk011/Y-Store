<div class="container">
    <div class="page-header">
        <div class="row">
            <div class="col-md-6">
                <% if @product.image.present? %>
                    <%= image_tag(@product.image.medium.url, class: "thumbnail") %>
                <% else %>
                    <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
                <% end %>
            </div>
            <div class="col-md-6">
                <h2> <%= @product.name %> </h2>
                <div style="height:100px;">
                    <p>
                        <%= @product.description %>
                    </p>
                </div>
                <div> 数量 : <%= @product.quantity %> </div>
                <div class="product-price"> ￥ <%= @product.price %> </div>
                <div class="pull-right">
                    <% if @product.quantity.present? && @product.quantity > 0 %>
                        <%= link_to("开始学习",  add_to_cart_product_path(@product), method: :post, class: "btn btn-raised btn-danger btn-lg pull-right")%>
                    <% else %>
                        课程已销售一空，无法购买
                       <% end %>
                </div>
            </div>
        </div>
        <!-- 课程详情内容 -->
        <%= render "products/detailed" %>
        <!-- 评论功能 -->
        <div class="row">
            <div class="col-sm-12 ">
                <h4>
                    <%= @product.reviews.count %> 个评论
                </h4>
                <hr>   <!-- 分割线 -->
            <div >
              <!-- 评论内容 -->
              <%= render @product.reviews%>
              <!-- 添加评论 -->
              <%= render "reviews/form"%>
            </div>
        </div>
    </div>
</div>
