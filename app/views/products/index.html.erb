<div class="product-box">
    <div class="container">
        <!--=== 课程类型 Banner ===-->
  <section class="intro-box">
  <div class="row">
    <div class="col-md-12">
        <% if params[:id].present? %>
            <%= image_tag(@product.category.category_group.image, class: "background-image") %>
        <% elsif params[:category].present? %>
            <%= image_tag(@category.category_group.image, class: "background-image") %>
        <% elsif params[:group].present? %>
            <%= image_tag(@group.image, class: "background-image") %>
        <% else %>
            <%= image_tag("product_bg.jpg", class: "background-image", style: "width: 100%") %>
        <% end %>
      </div>
  </div>
</section>

        <%= render "products/menu" %>
        <div class="pro-in"> <!-- 和排序文字的距离 -->
            <div class="row">
                <% @products.each do |product| %>
                    <div class="col-xs-6 col-md-3">
                        <%= link_to product_path(product) do %>
                            <% if product.image.present? %>
                                <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
                            <% else %>
                                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                            <% end %>
                        <% end %>
                        <td width="100%">
                            <div >
                                <%= link_to(product.name, product_path(product))%>
                            </div>
                        </td>
                        <span class="price">￥ <%= product.price %></span>
                        <!-- 点赞图标 -->
                        <%= link_to like_product_path(product), method: :put do %>
                            <span class="pi-thumbs-up">
                                <i class="fa fa-thumbs-up fa-2x" , style="color:#F25F5C;"></i>
                                <%= product.get_upvotes.size %>
                            </span>
                        <% end %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
